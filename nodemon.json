{
  "ignore": [
    ".git",
    "node_modules/",
    "db/",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "node_modules",
    "dist"
  ],
  "watch": ["src/"],
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_TRANSPILE_ONLY": "true"
  },
  "exec": "tsx src/server.ts",
  "ext": "ts,js,json",
  "execMap": {
    "ts": "tsx"
  },
  "delay": 1500,
  "legacyWatch": true
}
